@page
@model TaskManager.Pages.Managers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1></h1>

<p>
    <a asp-page="Create">Create New</a>
</p>




<form>
    <p>
        ActivityName: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>






<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Manager[0].ActivityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager[0].ActivityDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager[0].ActivityHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager[0].ActivityDesctription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Manager) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityDesctription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
